# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mini_supermarket
# Hoặc sử dụng MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mini-supermarket?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (tạo bằng: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRE=7d

# Session Secret
SESSION_SECRET=your-session-secret-here

# CORS
CLIENT_URL=http://localhost:3000

# Email Configuration (optional - cho reset password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads